<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
   
    <groupId>org.kuali.kfs</groupId>
    <artifactId>kfs-help</artifactId>
    <version>5.4.0-SNAPSHOT</version>
    <packaging>jar</packaging>
    <description>
        The Kuali Financial System help module contains help files for the Kuali Financial application.
    </description>
    <url>http://${kuali.site.hostname}/kfs/${project.artifactId}/${project.version}</url>
    <inceptionYear>2014</inceptionYear>
   
 	<prerequisites>
        <maven>${require.maven.version}</maven>
    </prerequisites>

    <properties>
        <project.scm.vendor>git</project.scm.vendor>
        <require.maven.version>3.0</require.maven.version>
        
        <dm.snapshotRepository.id>kualico.nexus.financials.snapshots</dm.snapshotRepository.id>
   	<dm.snapshotRepository.name>KualiCo Nexus Snapshots Repository</dm.snapshotRepository.name>
   	<dm.snapshotRepository.url>https://nexus.kuali.co/nexus/content/repositories/financials-snapshots</dm.snapshotRepository.url>

   	<dm.repository.id>kualico.nexus.financials.releases</dm.repository.id>
   	<dm.repository.name>KualiCo Nexus Releases Repository</dm.repository.name>
   	<dm.repository.url>https://nexus.kuali.co/nexus/content/repositories/financials-releases/</dm.repository.url>
    </properties>

 <repositories>
    <repository>
      <id>kualico.nexus.financials.releases</id>
      <name>KualiCo Nexus Financials</name>
      <url>https://nexus.kuali.co/nexus/content/repositories/financials-repos/</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <releases>
        <enabled>true</enabled>
      </releases>
    </repository>
    <repository>
      <id>foundation.nexus</id>
      <name>Kuali Foundation Nexus Group</name>
      <url>http://nexus.kuali.org/content/groups/public</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <releases>
        <enabled>true</enabled>
      </releases>
    </repository>
  </repositories>

  <distributionManagement>
    <snapshotRepository>
      <id>${dm.snapshotRepository.id}</id>
      <name>${dm.snapshotRepository.name}</name>
      <url>${dm.snapshotRepository.url}</url>
    </snapshotRepository>
    <repository>
      <id>${dm.repository.id}</id>
      <name>${dm.repository.name}</name>
      <url>${dm.repository.url}</url>
    </repository>
  </distributionManagement>


</project>
